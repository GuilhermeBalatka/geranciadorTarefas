{% extends 'base.html.twig' %}

{% block title %}Anexo index{% endblock %}

{% block body %}
    <h1>Lista de Anexos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Arquivo</th>
                <th>Tarefa</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for anexo in anexos %}
            <tr>
                <td>{{ anexo.id }}</td>
                <td>{{ anexo.nome }}</td>
                <td>{{ anexo.arquivo }}</td>
                <td>{{ anexo.tarefa.id }}</td> 
                <td>
                    <a href="{{ path('app_anexo_show', {'id': anexo.id}) }}" class="btn btn-info">Mostrar</a>
                    {{ include('anexo/_delete_form.html.twig') }}
                                      
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Nenhum registro encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
